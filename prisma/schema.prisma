generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  permissions Permission[]
}

model Permission {
  id    String @id @default(cuid())
  key   String
  users User[]
}

model Product {
  id    String  @id @default(cuid())
  title String  @unique
  units String
  Order Order[]
}

model Order {
  id        String   @id @default(cuid())
  createdBy String
  // order details
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Float
  // order statuses
  created   DateTime @default(now()) @db.Date
  ordered   DateTime @default(now()) @db.Date
  invoiced  DateTime @default(now()) @db.Date
  payed     DateTime @default(now()) @db.Date
  shipped   DateTime @default(now()) @db.Date
  received  DateTime @default(now()) @db.Date
}
