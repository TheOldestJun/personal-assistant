generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  permissions Permission[]
}

model Permission {
  id    String @id @default(cuid())
  key   String @unique
  users User[]
}

model Product {
  id    String  @id @default(cuid())
  title String  @unique
  Order Order[]
}

model Unit {
  id     String  @id @default(cuid())
  title  String  @unique
  orders Order[]
}

model Order {
  id        String   @id @default(cuid())
  createdBy String //Кто создал
  // order details
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  units     Unit     @relation(fields: [unitId], references: [id])
  unitId    String
  quantity  Float
  notes     String? //Примечание
  // order statuses
  created   DateTime @default(now()) @db.Date
  ordered   DateTime? @db.Date //Заказано
  invoiced  DateTime? @db.Date //Получен счет
  payed     DateTime? @db.Date //Оплачено
  shipped   DateTime? @db.Date //Отгружено
  received  DateTime? @db.Date //Получено
}

model Safekeeping {
  id       String  @id @default(cuid())
  code     String //Код ТМЦ
  name     String //Наименование
  units    String //ЕИ
  quantity Float //Кол-во
  gok      Float? //ГОК
  order    Float? //Забрать
  ferro    Float? //Забрано
  notes    String? //Примечание
}

model Reserved {
  id    String     @id @default(cuid())
  code  String
  name  String
  qty   Float
  sum   Float
  notes String
}
