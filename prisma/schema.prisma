generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  permissions Permission[]
}

model Permission {
  id    String @id @default(cuid())
  key   String @unique
  users User[]
}

model Product {
  id     String  @id @default(cuid())
  title  String  @unique
  units  Unit    @relation(fields: [unitId], references: [id])
  Order  Order[]
  unitId String
}

model Unit {
  id       String    @id @default(cuid())
  title    String    @unique
  products Product[]
}

model Order {
  id        String   @id @default(cuid())
  createdBy String
  // order details
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Float
  // order statuses
  created   DateTime @default(now()) @db.Date
  ordered   DateTime @db.Date
  invoiced  DateTime @db.Date
  payed     DateTime @db.Date
  shipped   DateTime @db.Date
  received  DateTime @db.Date
}

model Safekeeping {
  id       String  @id @default(cuid())
  code     String //Код ТМЦ
  name     String //Наименование
  units    String //ЕИ
  quantity Float //Кол-во
  gok      Float? //ГОК
  order    Float? //Забрать
  ferro    Float? //Забрано
  notes    String? //Примечание
}
